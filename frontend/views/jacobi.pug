extends layout

block content
  .columns.is-centered.mt-5
    .column.is-5
      h2.title.is-4 Jacobi Iterative Method
      form#jacobi-form
        .field
          label.label Matrix (A)
          .control
            #matrix-input
        .field
          label.label Vector (b)
          .control
            input.input(type='text' name='b' required placeholder='Enter the vector' id='vector-input')
        .field
          label.label Initial Guess (x0)
          .control
            input.input(type='text' name='x0' required placeholder='Enter the initial guess' id='initial-guess')
        .field
          label.label Error Type
          .control
            div.select
              select(name='errorType' required)
                option(value='1') Absolute
                option(value='2') Relative
        .field
          label.label Tolerance
          .control
            input.input(type='number' name='toleranceValue' required placeholder='Enter the tolerance' step='any')
        .field
          label.label Maximum Iterations
          .control
            input.input(type='number' name='maxIterations' required placeholder='Enter the maximum iterations')
        .field
          label.label Norm
          .control
            input.input(type='text' name='norm' required placeholder='Enter the norm (e.g., inf, 1, 2)' id='norm-input')
        .field.is-grouped
          .control
            button.button.is-link(type='submit') Calculate

    .column.is-5
      h2.title.is-4 Results
      .content
        h3.subtitle.is-5 Method Results
        p#result-text
        table.table.is-striped.is-fullwidth
          thead
            tr
              th Iteration
              th Error
          tbody#result-table
        .results-container
          p#solution X Values:
          .result-table#result-solution


block scripts
  script(src="/js/jacobi.js")